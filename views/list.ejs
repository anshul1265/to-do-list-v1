<%- include("header") -%>

<div id="heading" class="box">

    <h1>
        <%= listTitle %>
    </h1>

</div>

<div class="box">

    <% for(let i=0;i !=newListItems.length;i++){ %>
        <div class="item">
            <input type="checkbox">
            <p>
                <%= newListItems[i] %>
            </p>
        </div>
        <% } %>

            <form class="item" action="/" method="post">
                <input class="" placeholder="Add New Item" type="text" name="newItem" autocomplete="off">
                <button name="list" value="<%= listTitle %>" type="submit">+</button>
            </form>

</div>

<%- include("footer") -%>